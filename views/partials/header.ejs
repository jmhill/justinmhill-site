<header class="header">
  <h1 class="brand-title"><a href="{{ site.baseurl }}/">{{ site.title }}</a></h1>
  <h2 class="brand-tagline">{{ site.description }}</h2>
  <nav class="nav">
    <ul class="nav-list">
      {% for page in site.pages %}
        {% if page.title %}
        <li class="nav-item"><a class="pure-button" href="{{ page.url | prepend: site.baseurl }}">{{ page.title }}</a></li>
        {% endif %}
      {% endfor %}
    </ul>
  </nav>
</header>